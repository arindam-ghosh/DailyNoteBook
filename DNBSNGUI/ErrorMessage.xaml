<Window x:Class="DNBSNGUI.ErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True" ResizeMode="NoResize" Background="#FFE9E0E0" 
        WindowStyle="None" WindowStartupLocation="CenterScreen" Height="160" Width="300" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DNBSNStyles;component/ControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <UniformGrid Columns="1" >
        <Label Content="Please enter correct User Name and/or Password" Name="label1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center"></Label>
        <Button Content="OK" Name="viewAllBtn"  ToolTip="close" Style="{StaticResource PlainBtnStyle}" Click="viewAllBtn_Click" Margin="110,25,110,25" ></Button>
    </UniformGrid>
</Window>
